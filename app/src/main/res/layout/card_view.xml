<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:cardBackgroundColor="#D7F1F5"
            app:cardCornerRadius="15dp"
            android:elevation="100dp"
            >
            <View
                android:background="@drawable/shape1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"/>
            <ImageView
                android:paddingTop="20dp"
                android:paddingRight="250dp"
                android:src="@drawable/shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="18dp"
                android:paddingRight="25dp"
                android:textSize="15dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A WEEK"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_mini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stripe Inc."
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingTop="90dp"
                android:paddingLeft="30dp"/>
            <TextView
                android:id="@+id/txt_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stripe Amex Express Checkout"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingTop="115dp"
                android:paddingLeft="30dp"/>
            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Strip + Amex Express Checkout"
                android:textStyle="bold"
                android:paddingTop="190dp"
                android:paddingLeft="30dp"/>

        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>